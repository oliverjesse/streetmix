<h1>New scenario</h1>

<% form_for(@scenario) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :starting_lat %><br />
    <%= f.text_field :starting_lat %>
  </p>
  <p>
    <%= f.label :starting_long %><br />
    <%= f.text_field :starting_long %>
  </p>
  <p>
    <%= f.label :duration %><br />
    <%= f.text_field :duration %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', scenarios_path %>